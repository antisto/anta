<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Ligue2Activity" >

     <!-- Inclusion de l’interface comportant l’en-tête de page -->
<include
android:id="@+id/include01"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
layout="@layout/logo_h">
</include>

<TextView
    android:id="@+id/textView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/include01"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="35dp"
     android:textColor="#ffffff"
    android:text="@string/title_activity_ligue2"
    android:textSize="@dimen/titre_page" />

<ImageButton
    android:id="@+id/butoncalig2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:src="@drawable/calend" />

<ImageButton
    android:id="@+id/butonclasslig2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/butoncalig2"
    android:layout_below="@+id/butoncalig2"
    android:layout_marginTop="16dp"
    android:src="@drawable/classement" />

<ImageButton
    android:id="@+id/butonresulig2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/butonclasslig2"
    android:layout_alignParentBottom="true"
    android:src="@drawable/result" />

</RelativeLayout>
