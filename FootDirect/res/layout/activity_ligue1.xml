<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@drawable/fond"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Ligue1Activity" >

    <!-- Inclusion de l’interface comportant l’en-tête de page -->
<include
android:id="@+id/include01"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
layout="@layout/logo_h">
</include>

<ImageButton
    android:id="@+id/butonresulig1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:src="@drawable/result" />

<ImageButton
    android:id="@+id/butoncallig1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/butonclasslig1"
    android:layout_centerVertical="true"
    android:src="@drawable/calend" />

<ImageButton
    android:id="@+id/butonclasslig1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/butonresulig1"
    android:layout_alignLeft="@+id/butonresulig1"
    android:layout_marginBottom="14dp"
    android:src="@drawable/classement" />

<TextView
    android:id="@+id/textView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/include01"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="24dp"
    android:textColor="#ffffff"
    android:text="@string/title_activity_ligue1"
    android:textSize="@dimen/titre_page" />

</RelativeLayout>
